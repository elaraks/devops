# old nginx configuration for internal FA digital ocean droplet
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/html;
	index index.html;

	server_name {{ domain_name }} www.{{ domain_name }};

	location /{{ application_name }}-server {
		rewrite /{{ application_name }}-server/(.*) /$1 break;
		proxy_pass http://127.0.0.1:{{ datasheet.port }};
	}

	location {{ application_name }} {
		root /var/www/html;
		try_files $uri $uri\ =404;
		auth_basic "Restricted Content";
		auth_basic_user_file /etc/nginx/.htpasswd;
	}
}
